 <name>OpenGeo Suite GeoWebCache</name>

 <dependencies>
    <dependency>
      <groupId>org.geowebcache</groupId>
      <artifactId>geowebcache</artifactId>
      <version>${gwc.version}</version>
      <type>war</type>
    </dependency>
