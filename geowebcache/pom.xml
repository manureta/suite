          <warName>geowebcache</warName>
          <webappDirectory>target/geowebcache</webappDirectory>
          <overlays>
            <overlay>
              <groupId>org.geowebcache</groupId>
              <artifactId>geowebcache</artifactId>
            </overlay>
          </overlays>
        </configuration>
      </plugin>
